{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },


  "permissions": [
    "activeTab"
  ],

    "background": {
      "scripts": ["background.js"]
    },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "PopPopPop",
    "default_popup": "popup.html"
  }
}
