{
  "manifest_version": 2,
  "name": "oDSponsoredContent",
  "version": "1.0",

  "description": "Warns about sponsored content on news articles.",

  "icons": {
    "48": "icons/border-48.png"
  },


  "permissions": [
    "*://oddie.scumways.com/*",
    "*://localhost/*",
    "tabs"
  ],

    "background": {
      "scripts": ["background.js"]
    },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["rules.js", "content.js"],
      "css": ["content.css"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Sponsored content detector",
    "default_popup": "popup.html"
  }
}
